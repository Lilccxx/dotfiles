auto_view text/html

alternative_order text/enriched text/plain text/html

mailboxes "+Work/Work" +Work/Work.Archive +Work/Work.Sent +Work/Work.Trash +Work/Work.Spam \
  "+Home/Home"

macro index,pager b  '<enter-command>toggle sidebar_visible<enter>'

bind index '[' sidebar-prev
bind index ']' sidebar-next
bind index '#' sidebar-open
bind pager '[' sidebar-prev
bind pager ']' sidebar-next
bind pager '#' sidebar-open

set mbox_type=maildir

#set sidebar_folder_indent
#set sidebar_format = "%B (%N)"
set sidebar_format = '%B%?F? [%F]?%* %?N?%N/?%S'
set sidebar_folder_indent
set sidebar_short_path
set sidebar_visible
set sidebar_width = 25
set sidebar_sort_method = 'unsorted'
set sidebar_new_mail_only = no
set mail_check_stats
set alias_file = ~/.config/mutt/addresses
set crypt_autosign
set editor = 'vim "+set filetype=mail" +/^$'
set header_cache = ~/.cache/mutt/headers
set imap_check_subscribed
set imap_keepalive = 300
set mail_check = 120
set message_cachedir = ~/.cache/mutt/messages
set mime_forward=yes
set mime_forward_rest=yes
set quit = ask-yes
set realname = "Krzysztof Jan Modras"
set signature="~/.config/mutt/signature"
set sort = threads
set sort_aux = reverse-date
set use_envelope_from = yes

unset move
color index blue default "~N"
color index blue default "~O" # old messages

#set folder = imaps://outlook.office365.com
set folder = ~/Mail
set spoolfile = "+Work/Work"
set from = "krzysztof@cliqz.com"
#set postponed= imaps://outlook.office365.com/Drafts
#set record= imaps://outlook.office365.com/Sent
set imap_user = krzysztof@cliqz.com
set smtp_url = "smtp://$imap_user@smtp.office365.com:587/"
#set spoolfile= +INBOX

source ~/.config/mutt/passwords

#source ~/.config/mutt/chrmod@chrmod.net.account
#source ~/.config/mutt/krzysztof.modras@gmail.com.account
